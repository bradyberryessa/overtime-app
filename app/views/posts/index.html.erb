<h1>Posts</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th class="text-center">
        ID #
      </th>
      <th class="text-center">
        Overtime Requested
      </th>
      <th class="text-center">
        Date
      </th>
      <th class="text-center">
        User
      </th>
      <th class="text-center">
        Rationale
      </th>
      <th class="text-center">
        Status
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody id="posts">
    <%= render @posts %>
  </tbody>
</table>

<div id="paginator">
  <%= paginate @posts, remote: true %>
</div>